<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".DetectionActivity">

    <!-- Mobile Camera Preview (hidden by default, used for fallback) -->
    <androidx.camera.view.PreviewView
        android:id="@+id/mobilePreviewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!-- Video Feed (ESP32 or displayed via ImageView) -->
    <ImageView
        android:id="@+id/frameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:contentDescription="Camera feed" />

    <!-- Overlay for detections -->
    <com.example.invisio.OverlayView
        android:id="@+id/overlayView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:clickable="false" />

    <!-- Top Bar with Logo -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/logo"
            android:contentDescription="App Logo"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <!-- Bottom Controls Bar (unchanged from original) -->
    <LinearLayout
        android:id="@+id/controlsBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="#77000000">

        <Button
            android:id="@+id/btnConnect"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/btn_gradient"
            android:text="Connect"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:contentDescription="Connect to camera" />

        <View
            android:layout_width="12dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/btnDetect"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/btn_gradient"
            android:text="Start Detection"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:contentDescription="Start detection" />
    </LinearLayout>

</RelativeLayout>