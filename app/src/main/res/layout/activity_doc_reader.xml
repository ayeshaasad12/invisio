<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Live camera preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true" />

    <!-- Frozen snapshot shown after auto-capture -->
    <ImageView
        android:id="@+id/frozenView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:visibility="gone"
        android:contentDescription="Captured document" />

    <!-- Alignment / page box overlay -->
    <com.example.invisio.BoxOverlayView
        android:id="@+id/boxOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false" />

    <!-- Logo at top-left -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="12dp"
        android:src="@drawable/logo"
        android:contentDescription="InVisio Logo"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <!-- Recognized text panel (unchanged from original) -->
    <ScrollView
        android:id="@+id/resultContainer"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:background="#66000000"
        android:padding="12dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <!-- Control Instructions (added for accessibility info) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:padding="8dp"
                android:background="#AA333333"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Controls:"
                    android:textColor="#FFFF99"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Double-Tap: Pause/Resume | Volume Up: Save PDF | Volume Down: Rescan"
                    android:textColor="#CCCCCC"
                    android:textSize="11sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>