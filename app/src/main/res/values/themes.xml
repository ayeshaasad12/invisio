<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.Invisio" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Additional Material attributes -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>

        <!-- Fix for ripple effects (state pressed colors) -->
        <item name="colorControlHighlight">@color/light_gray</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Optional: App icon tinting compatibility -->
        <item name="android:iconTint">@color/pink</item>
    </style>
</resources>
